// Place your key bindings in this file to override the defaults
[
    {
        "key": "escape",
        "command": "toggleVim",
        "when": "editorTextFocus && vim.mode == 'Disabled' || editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+alt+r",
        "command": "latex-workshop.recipes"
    },
